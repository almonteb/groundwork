- title t '.title'
- model_t = lambda{ |attr| UserSession.human_attribute_name(attr) }
#user_sessions-new.block
  %h2= yield :title
  .content.form
    - form_for @user_session, :url => user_session_path do |f|
      = f.error_messages
      .group
        .left
          = f.label :login, model_t['login'], :class => 'label'
        .right
          = f.text_field :login, :class => 'text_field'
        .clear
      .group
        .left
          = f.label :password, model_t['password'], :class => 'label'
        .right
          = f.password_field :password, :class => 'text_field'
        .clear
      .group
        = f.check_box :remember_me
        = f.label :remember_me, model_t['remember_me']
      .group
        .left{:style => 'padding: 7px; font-size: 10px;'}
          = link_to t('.lost_password'), new_password_reset_path
        .right
          = f.submit t('.submit'), :class => 'button'
        .clear