- title 'Change Password'

#block-reset.block
  %h2= yield :title
  .content.form
    - form_for @user, :url => password_reset_path(:token => params[:token]), :method => :put do |f|
      = f.error_messages
      .group
        .left
          = f.label :password, nil, :class => 'label'
        .right
          = f.text_field :password, :class => 'text_field'
        .clear
      .group
        .left
          = f.label :password_confirmation, 'Confirmation', :class => 'label'
        .right
          = f.text_field :password_confirmation, :class => 'text_field'
        .clear
      .group
        .right
          = f.submit "Update Password", :class => 'button'
        .clear
