!!! Strict
%html
  %head
  %body
    %h2= t('user_mailer.signup_notification.title')
    %p= t('user_mailer.signup_notification.body')
    %p= confirm_account_url(:token => @user.perishable_token, :locale => I18n.locale)
    %p= t('user_mailer.signup_notification.login_credentials')
    %p
      = User.human_attribute_name('login')+ ": " + @user.login
      %br
      = User.human_attribute_name('password') + ": " + @user.password

